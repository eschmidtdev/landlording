<div class="row d-flex justify-content-center align-items-center">
  <div class="col-md-9 col-lg-6 col-xl-5 bg-light_red">
    <%= image_tag('users/SingleIllustration.png', class: 'set_login_ill') %>
  </div>

  <div class="col-md-8 col-lg-6 col-xl-4 ml-5" id="PasswordSectionGitIt">

    <!-- Heading -->
    <div class="row confirm-email-heading">
      <div class="col-md-12">
        <span class="login_text">Mail Sent</span>
        <p style="font-size: 18px;">If there is an account under that address, we have sent an email to reset your password.</p>
      </div>
    </div>

    <!-- Buttons -->
    <div class="my-4">
      <button type="button"
              onclick="window.location.href='<%= user_session_path %>'"
              class="btn create-button got-it-btn got-it-mob"
      >
        GOT IT
      </button>

    </div>
  </div>
</div>

