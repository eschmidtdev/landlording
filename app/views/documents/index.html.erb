<div class="container">

  <!-- Heading -->
  <%= render partial: 'layouts/page_heading' %>

  <!-- Buttons Row -->
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between">

        <!-- Export Button -->
        <button type="button" class="export_button">
          <%= image_tag 'documents/export_icon.svg', class: 'pull-left m-0', width: '20' %>
          <span class="ml-2">Date Created</span>
        </button>

        <!-- Create Doc Button -->
        <button type="button" class="new_doc_button">
          <%= image_tag 'documents/plus_icon.svg', class: 'pull-left m-0', width: '20' %>
          <span class="ml-2">Create New</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Document Table -->
  <table class="table documents-table">
    <thead>
    <tr>
      <th>NAME</th>
      <th>STATUS</th>
    </tr>
    </thead>
    <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td>
          <div class="doc_details">
            <span class="doc_name my-auto"><%= document.name %></span><br>
            <span class="doc_date ml-2">Created on <%= document.created_at %></span>
          </div>
        </td>
        <td>
          <div class="doc_status">
            <span class="progress_rectangle">In Progress (78%)</span>
          </div>
        </td>
        <td>
          <%= render partial: 'dropdown' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <!-- Pagination -->
  <%= will_paginate @documents, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
