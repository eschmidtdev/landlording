<%= render 'layouts/breadcrumb_headings' %>

<div class="row">
  <!-- Actual form content -->
  <div class="col-md-8">

    <!-- Progressbar -->
    <div class="row-fluid title-row">
      <div class="span12">
        <div class="dm_form_progress_area">
          <div class="dm_form_progress">
            <div class="dm_form_progress_bar" style="width: 0%;">
              <div class="stripped-bar"></div>
              <div class="dm_form_progress_info">0 %</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= form_with(model: document, id: 'DocumentForm') do |form| %>
      <% hidden_field 'document[user_id]', value: current_user.id %>

        <div class="checkbox-sec">
          <%= form.label :name %>
          <%= form.text_field :name, required: true %>
        </div>
        <br>

      <div class="row next-prev-but">
        <div class="col-md-12">
          <div class="pull-left">
            <i class="fa fa-save"></i> <%= link_to 'Save and finish later', "#", :onclick => "$('#DocumentForm').submit()" %>
          </div>
          <div class="pull-right">
            <button type="button" name="prev" class="btn btn-primary-custom btn-prev" disabled="">
              <i class="fa fa-arrow-left"></i> Previous
            </button>
            <button type="button" name="next" class="btn btn-primary-custom btn-next">Next
              <i class="fa fa-arrow-right icon-right"></i></button>
          </div>
        </div>
      </div>
    <% end %>
  </div>


  <!-- Form listing points -->
  <div class="col-md-4">
    <div id="sidebar" class="rounded">
      <ul>
        <li>
          <ul class="dm_navigation">
            <li>Type of Agreement</li>
            <li>Lease Termination</li>
            <li>Type of Property</li>
            <li>Property Address</li>
            <li>Number (#) of Bedrooms</li>
            <li>Number (#) of Bathrooms</li>
            <li>Furnishings</li>
            <li>Appliances</li>
            <li>Parking</li>
            <li>Fee for Parking</li>
            <li>The Landlord</li>
            <li>Business Entity (Landlord)</li>
            <li>Landlord's Name</li>
            <li>Landlord's Address</li>
            <li>The Tenant</li>
            <li>Business Entity (Tenant)</li>
            <li>Tenant's Name</li>
            <li>Occupants</li>
            <li>Occupant's Names</li>
            <li>Rent</li>
            <li>Due Date</li>
            <li>Security Deposit</li>
            <li>First (1st) Month's Rent</li>
            <li>Pre-Payment of Rent</li>
            <li>NSF</li>
            <li>Late Fee</li>
            <li>Early Termination (Sale of Property)</li>
            <li>Early Termination (Tenant)</li>
            <li>Proration</li>
            <li>Option to Purchase</li>
            <li>Move-in Inspection</li>
            <li>Utilities &amp; Services</li>
            <li>Pets</li>
            <li>Smoking Policy</li>
            <li>Subletting</li>
