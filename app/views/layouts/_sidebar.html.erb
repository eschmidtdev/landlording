<%= stylesheet_link_tag 'sidebar' %>

<nav id="nav-sidebar" class="bg-faded">
  <div class="sidebar-content hidden-sm-down">
    <ul>
      <!-- Image & Name -->
      <li class="image-mob">
        <a
          role="button"
          aria-haspopup="true"
          aria-expanded="false"
          data-toggle="dropdown"
          id="dropdownMenuButtonMob"
        >
          <!-- Image -->
          <%= image_tag 'navbar/user_image.png',
                        width: '40',
                        height: '40',
                        class: 'rounded-circle'
          %>
          <!-- Name -->
          <span><%= user_name(current_user) %></span>
        </a>
        <div class="dropdown-menu user-logout-mob-container" aria-labelledby="dropdownMenuButtonMob">
          <a class="dropdown-item user-logout-mob" href="/users/sign_out" data-method="delete">Log Out</a>
        </div>
      </li>

      <li class="<%= 'active_border' if current_page? visitors_path %>">
        <a href="<%= visitors_url %>">
          <%= image_tag current_page?(visitors_url) ? 'sidebar/active_category.svg' : 'sidebar/inactive_category.svg', width: '25' %>
          <span class="<%= current? 'active', visitors_url %>">Overview</span>
        </a>
      </li>

      <li class="<%= 'active_border' if current_page? documents_path %>">
        <a href="<%= documents_path %>">
          <%= image_tag current_page?(documents_path) ? 'sidebar/active_doc.svg' : 'sidebar/inactive_doc.svg', width: '25' %>
          <span class="<%= current? 'active', documents_path %>">My Documents</span>
        </a>
      </li>

      <!-- Ignore for now as per document -->
      <!--      <li class="<%#= 'active_border' if current_page? rental_applications_path %>">-->
      <!--        <a href="<%#= rental_applications_path %>">-->
