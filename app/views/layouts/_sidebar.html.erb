      <!--          <span class="<%#= current? 'active', rental_applications_path %>">Rental Applications</span>-->
      <!--        </a>-->
      <!--      </li>-->
      <!-- Ignore for now as per document -->

      <li class="<%= 'active_border' if params[:controller] == 'properties' %>">
        <a href="<%= properties_path %>">
          <%= image_tag params[:controller] == 'properties' ? 'sidebar/active_home.svg' : 'sidebar/inactive_home.svg', width: '25' %>
          <span class="<%= 'active' if params[:controller] == 'properties' %>">My Properties</span>
        </a>
      </li>

      <li class="<%= 'active_border' if (params[:controller] == 'account_settings' || params[:controller] == 'subscriptions' || params[:controller] == 'payment_details') %>">
        <a href="<%= account_path %>">
          <%= image_tag (params[:controller] == 'account_settings' || params[:controller] == 'subscriptions' || params[:controller] == 'payment_details') ? 'sidebar/active_account_setting.svg' : 'sidebar/inactive_account_setting.svg', width: '25' %>
          <span class="<%= 'active' if (params[:controller] == 'account_settings' || params[:controller] == 'subscriptions' || params[:controller] == 'payment_details') %>">Account Settings</span>
        </a>
      </li>
    </ul>
  </div>
</nav>