<nav class="navbar navbar-expand-lg navbar-dark bg-white fixed-top">
  <div class="container-fluid">

    <!-- App LogLogo -->
    <a class="navbar-brand" href="<%= root_path %>">
      <div class="logo-img-container">
        <%= image_tag 'navbar/app_logo.png', width: '100%' %>
      </div>
    </a>

    <!-- Toggle Button -->
    <button
      type="button"
      aria-expanded="false"
      class="navbar-toggler"
      data-toggle="collapse"
      aria-label="Toggle navigation"
      data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Font Awesome Icon -->
    <div class="sidebar-expand hidden-md-up toggle-menu-button">
      <button type="button">
        <%= image_tag 'navbar/hamburg_menu.svg' %>
      </button>
    </div>

    <div class="collapse navbar-collapse " id="navbarSupportedContent">

      <ul class="navbar-nav ml-auto">

        <!-- Help & Support -->
        <li class="nav-item nav-item-text">
          <a class="nav-link bold" href="<%= root_path %>">Help & Support</a>
        </li>

        <!-- User Name & Image -->
        <li class="nav-item dropdown user-nameshow">

          <a
            role="button"
            aria-haspopup="true"
            aria-expanded="false"
            data-toggle="dropdown"
            href="<%= root_path %>"
            class="nav-link dropdown-toggle"
            id="navbarDropdownMenuLink"
          >

            <!-- Name -->
            <span class="user-name">
              Hi, <%= user_name(current_user) %>
            </span>

            <!-- Image -->
            <%= image_tag 'navbar/user_image.png',
                          width: '40',
                          height: '40',
                          class: 'rounded-circle'
            %>
          </a>

          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="<%= root_path %>">Dashboard</a>
            <a class="dropdown-item" href="<%= account_path %>">Edit Profile</a>
            <a class="dropdown-item" href="/users/sign_out" data-method="delete">Log Out</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>
