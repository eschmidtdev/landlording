<div class="eforms_breadcrumb">
  <span>
    <a href="<%= root_path %>" class="bread-links">
      <span>Home</span>
    </a>
    <meta itemprop="position" content="1">
  </span> »
  <span>
    <a href="<%= e_forms_path %>" class="bread-links">
      <span>My eForms</span>
    </a>
    <meta itemprop="position" content="2">
  </span> » <strong>My Documents</strong>
</div>

<div class="row-fluid">
  <div class="span12">
    <h1 class="page_title">My Documents</h1>
  </div>
</div>

<div class="span12">
  <div class="separator"></div>
</div>

<div id="dm_my_documents">


  <p class="pull-right">
    <%= link_to 'New Document', new_e_form_path, class: 'btn btn-primary' %>
  </p>
  <div class="doc-table">
    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <th>Created At</th>
        <th class="dm_table_actions">Actions</th>
      </tr>
      </thead>
      <% @e_forms.each do |e_form| %>
        <tbody>
        <tr>
          <td>
            <div class="dm_table_name"><%= e_form.name %></div>
            <div class="dm_table_source">
              Source:
              <a href="#">North Dakota Residential Lease Agreement</a>
            </div>
          </td>
          <td>
            <%= e_form.created_at.strftime('%d/%m/%Y') %>
          </td>
          <td class="dm_table_actions">
            <a href="#" class="btn btn-primary">
              <i class="fa fa-edit"></i> Edit </a>

            <div class="btn-group">
              <button type="button" name="dm_button_more" class="btn dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-bars"></i> More
              </button>
              <ul class="dropdown-menu">
                <li>
                  <a href="#">
                    <i class="fa fa-edit"></i> Edit </a>
                </li>
                <li>
                  <a href="" data-rename="9355908">
                    <i class="fa fa-tag"></i> Rename </a>
                </li>
                <li>
                  <a href="" data-delete="9355908">
                    <i class="fa fa-trash"></i> Delete </a>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <!--    TODO Add pagination-->
  </div>
</div>

<br>
