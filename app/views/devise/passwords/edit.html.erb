<%= stylesheet_link_tag 'passwords' %>
<%= stylesheet_link_tag 'forgot_passwords' %>

<div class="row d-flex justify-content-center align-items-center">
  <div class="col-md-9 col-lg-6 col-xl-5 bg-light_red">
    <%= image_tag('users/SingleIllustration.png', class: 'set_login_ill') %>
  </div>

  <div class="col-md-8 col-lg-6 col-xl-4 ml-5" id="PasswordSectionEdit">
    <!-- Sign in form -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, name: 'reset_password' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <!-- Heading -->
      <div class="row reset-pass-heading">
        <div class="col-md-12">
          <span class="login_text">Reset Password</span>
          <h6>Create a new password</h6>
        </div>
      </div>

      <!-- Password input -->
      <div class="form-outline my-4">
        <label class="form-label font-normal" for="ResetNewPassword">New Password*</label>
        <div class="fake-input">
          <%= f.password_field :password,
                               autofocus: true,
                               autocomplete: 'off',
                               id: 'ResetNewPassword',
                               placeholder: "Enter your password",
                               class: 'form-control form-control-lg toggle-password-new-pass'
          %>
          <%= image_tag 'global_images/eye_icon.svg', width: '20', id: 'resetEyeNP' %>
        </div>
      </div>

      <!-- Password conformation -->
      <div class="form-outline">
        <label class="form-label font-normal" for="ResetConfirmPassword">Confirm Password*</label>
        <div class="fake-input">
          <%= f.password_field :password_confirmation,
                               autocomplete: 'off',
                               id: 'ResetConfirmPassword',
                               placeholder: "Confirm your new password",
                               class: 'form-control form-control-lg toggle-password-confirm-pass'
          %>
          <%= image_tag 'global_images/eye_icon.svg', width: '20', id: 'resetEyeCP' %>
        </div>
      </div>

      <!-- Buttons -->
      <div class="my-4">
        <%= f.submit 'save', class: 'btn w-100 custom-long-btn', onclick: "return;", id: 'ResetPasswordBtn' %>

        <!-- Login Link -->
        <div class="d-flex justify-content-center my-4">
          <div>
            <%= image_tag('users/BackIcon.svg', class: 'set_back_icon') %>
          </div>
          Go back to&nbsp;<a href="<%= user_session_path %>" class="link-danger text-deco-none">Login</a>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag 'reset_password' %>
