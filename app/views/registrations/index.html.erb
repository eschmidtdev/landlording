<%= javascript_include_tag 'signup' %>

<div class="row d-flex justify-content-center align-items-center">
  <div class="col-md-9 col-lg-6 col-xl-5 bg-light_red">
    <%= image_tag('users/SingleIllustration.png', class: 'set_login_ill') %>
  </div>

  <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

    <!-- Sign in form -->
    <form name="registration" id="RegistrationForm">

      <!-- Heading -->
      <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
        <p class="login_text">Sign Up</p>
      </div>

      <!-- ErrorAlert -->
      <span class="error_alert display_none"></span>
      <span class="success_alert display_none"></span>

      <!-- Full Name -->
      <div class="form-group">
        <label for="UserName" class="font-normal">Full Name*</label>
        <input
          type="text"
          id="UserName"
          name="user[name]"
          autofocus="autofocus"
          placeholder="Your full name"
          class="form-control form-control-lg"
        >
      </div>

      <!-- Email input -->
      <div class="form-outline mt-4">
        <label class="form-label font-normal" for="RegEmail">Email*</label>
        <input
          type="email"
          id="RegEmail"
          name="user[email]"
          autofocus="autofocus"
          placeholder="Your email address"
          class="form-control form-control-lg"
        >
      </div>
      <span class="error display_none" id="UserExists"></span>

      <!-- Password input -->
      <div class="form-outline mt-4">
        <label class="form-label font-normal" for="RegPass">Password*</label>
        <input
          id="RegPass"
          type="password"
          name="user[password]"
          placeholder="Enter your password"
          class="form-control form-control-lg"
        >
      </div>
      <span class="error display_none" id="PasswordError"></span>

      <!-- Terms + PP + Checkbox -->
      <div class="d-flex justify-content-between align-items-start my-4">
        <input class="form-check-input" type="checkbox" name="user[tos]" id="TOS"/>
        <label class="form-check-label remember_text" for="TOS">
          I have read and understand the
          <a href="#!" class="text-body">Terms of Use</a>
          and
          <a href="#!" class="text-body">Privacy Policy</a>
        </label>
      </div>

      <!-- Buttons -->
      <div class="text-center text-lg-start">

        <!-- Sign Up Button -->
        <button type="submit" class="btn w-100 login_btn" id="SignupBtn">Sign Up</button>

        <div class="divider d-flex align-items-center mtb-20">
          <p class="text-center remember_text mx-3 my-auto">OR</p>
        </div>

        <!-- OmniOuth Button -->
        <div class="control-group google-sign-in">
          <button
            type="button"
            name="google_sign_in"
            class="btn w-100 btn-google-sign-in"
            onclick="window.location.href='/auth/google_oauth2'">
            <div></div>
            Signup with google account
          </button>
        </div>

        <!-- Login Link -->
        <p class="my-4">Have an account?
          <a href="<%= root_path %>" class="link-danger">Login</a></p>
      </div>
    </form>
  </div>
</div>
