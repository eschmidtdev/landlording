<%= stylesheet_link_tag 'passwords' %>

<div class="row d-flex justify-content-center align-items-center">
  <div class="col-md-9 col-lg-6 col-xl-5 bg-light_red">
    <%= image_tag('users/SingleIllustration.png', class: 'set_login_ill') %>
  </div>

  <div class="col-md-8 col-lg-6 col-xl-4 ml-5" id="PasswordSectionGitIt">

    <!-- Heading -->
    <div class="row confirm-email-heading">
      <div class="col-md-12">
        <span class="login_text">Confirm Email</span>
        <p class="font-16">To verify the email address for your account, a confirmation email has been sent.</p>
        <p class="font-16">Please click the link in the email to login.</p>
      </div>
    </div>

    <!-- Buttons -->
    <div class="my-4">
      <button type="button"
              onclick="window.location.href='<%= signup_path %>'"
              class="btn create-button got-it-btn got-it-mob"
      >
        GOT IT
      </button>

    </div>
  </div>
</div>
