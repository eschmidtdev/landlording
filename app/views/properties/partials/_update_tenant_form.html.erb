<%= stylesheet_link_tag 'properties' %>
<% tenant = property&.tenants&.last %>

<div class="<%= 'display_none' unless property.currently_leased %>">

  <div class="mt-3">
    <span class="font-18 bold">Edit Tenant</span>
  </div>

  <div class="accordion <%='display_none' unless property.currently_leased %>">
    <div class="card mt-2" id="CardBorderMob">
      <div class="card-body" id="CardBodyMob">
        <div class="container p-3 col-12" id="TenantFormMob">

          <!-- Tenant Name -->
          <div class="form-group">
            <label for="EpropertyNewTenantName">Tenant Name</label>
            <input
              type="text"
              id="EpropertyNewTenantName"
              placeholder="Enter Full Name"
              name="Eproperty[NewTenantName]"
              class="form-control form-control-lg input-45"
              value="<%= check_for(tenant.name) %>"
            >
          </div>

          <!-- Tenant Phone & Email -->
          <div class="row">
            <!-- Phone -->
            <div class="col">
              <div class="form-group">
                <label for="EpropertyNewTenantPhone">Tenant Phone</label>
                <input
                  type="text"
                  id="EpropertyNewTenantPhone"
                  placeholder="Enter Full Name"
                  name="Eproperty[NewTenantPhone]"
                  value="<%= check_for(tenant.phone_number) %>"
                  class="form-control form-control-lg input-45"
                  onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                  oncopy="return false" oncut="return false" onpaste="return false"
                >
              </div>
            </div>
            <!-- Email -->
            <div class="col">
              <div class="form-group">
                <label for="EpropertyNewTenantEmail">Tenant Email</label>
                <input
                  type="email"
                  id="EpropertyNewTenantEmail"
                  name="Eproperty[NewTenantEmail]"
                  placeholder="Enter Email Address"
                  value="<%= check_for(tenant.email) %>"
                  class="form-control form-control-lg input-45"
                >
              </div>
            </div>
          </div>

          <!-- Lease Start & End Date -->
          <div class="row">
            <!-- Start Date -->
            <div class="col">
              <div class="form-group">
                <label for="EpropertyNewLeaseStartDate">Lease Start Date</label>
                <input
                  type="date"
                  placeholder="Enter Full Name"
                  id="EpropertyNewLeaseStartDate"
                  name="Eproperty[NewLeaseStartDate]"
                  class="form-control form-control-lg input-45"
                  value="<%= check_for(tenant.lease_start_date) %>"
                >
              </div>
            </div>
            <!-- Start Date -->
            <div class="col">
              <div class="form-group">
                <label for="EpropertyNewLeaseEndDate">Lease End Date</label>
                <input
                  type="date"
                  id="EpropertyNewLeaseEndDate"
                  name="Eproperty[NewLeaseEndDate]"
                  placeholder="Enter Email Address"
                  class="form-control form-control-lg input-45"
                  value="<%= check_for(tenant.lease_end_date) %>"
                >
              </div>
            </div>
          </div>
          <%#= link_to 'Edit Tenant',
                        '#',
                        class: 'edit',
                        data: { 'toggle': 'modal', 'target': "#exampleModalCenter" }
          %>
        </div>
      </div>
    </div>
  </div>
</div>
