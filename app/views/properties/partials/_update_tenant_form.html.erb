<%= stylesheet_link_tag 'properties' %>
<% tenant = property&.tenants&.last %>

<div class="<%= 'display_none' unless property.currently_leased %>">
  <div class="mt-3">
    <span class="font-18 bold">Add Saved Tenant</span>
  </div>
  <div class="accordion" id="Change Me when to use Modal">
    <div class="card mt-2" id="CardBorderMob">
      <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="card-body" id="CardBodyMob">
          <div class="container p-3 col-12" id="TenantFormMob">

            <!-- Tenant Name -->
            <div class="form-group">
              <label for="EpropertyNewTenantName">Tenant Name</label>
              <input
                type="text"
                id="EpropertyNewTenantName"
                placeholder="Enter Full Name"
                name="Eproperty[NewTenantName]"
                class="form-control form-control-lg input-45"
                value="<%= check_for(tenant.name) %>"
              >
            </div>

            <!-- Tenant Phone & Email -->
            <div class="row">
              <!-- Phone -->
              <div class="col">
                <div class="form-group">
                  <label for="EpropertyNewTenantPhone">Tenant Phone</label>
                  <input
                    type="text"
                    id="EpropertyNewTenantPhone"
                    placeholder="Enter Full Name"
                    name="Eproperty[NewTenantPhone]"
                    value="<%= check_for(tenant.phone_number) %>"
                    class="form-control form-control-lg input-45"
                    onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                    oncopy="return false" oncut="return false" onpaste="return false"
                  >
                </div>
              </div>
              <!-- Email -->
              <div class="col">
                <div class="form-group">
                  <label for="EpropertyNewTenantEmail">Tenant Email</label>
                  <input
                    type="email"
                    id="EpropertyNewTenantEmail"
                    name="Eproperty[NewTenantEmail]"
                    placeholder="Enter Email Address"
                    value="<%= check_for(tenant.email) %>"
                    class="form-control form-control-lg input-45"
                  >
                </div>
              </div>
            </div>

            <!-- Lease Start & End Date -->
            <div class="row">
              <!-- Start Date -->
              <div class="col">
                <div class="form-group">
                  <label for="EpropertyNewLeaseStartDate">Lease Start Date</label>
                  <input
                    type="date"
                    placeholder="Enter Full Name"
                    id="EpropertyNewLeaseStartDate"
                    name="Eproperty[NewLeaseStartDate]"
                    class="form-control form-control-lg input-45"
                    value="<%= check_for(tenant.lease_start_date) %>"
                  >
                </div>
              </div>
              <!-- Start Date -->
              <div class="col">
                <div class="form-group">
                  <label for="EpropertyNewLeaseEndDate">Lease End Date</label>
                  <input
                    type="date"
                    id="EpropertyNewLeaseEndDate"
                    name="Eproperty[NewLeaseEndDate]"
                    placeholder="Enter Email Address"
                    class="form-control form-control-lg input-45"
                    value="<%= check_for(tenant.lease_end_date) %>"
                  >
                </div>
              </div>
            </div>
            <%#= link_to 'Edit Tenant',
                        '#',
                        class: 'edit',
                        data: { 'toggle': 'modal', 'target': "#exampleModalCenter" }
            %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content edit-tenant-modal">
      <div class="close">
        <%= image_tag 'properties/close_property_modal.svg',
                      aria: { 'label': 'Close' },
                      data: { 'dismiss': 'modal' },
                      class: 'close_modal_icon pull-right', width: '30'
        %>
      </div>
      <div class="modal-body">
        <div class="body">
          <div class="mb-3">
            <span class="heading bold">Edit Tenant</span>
          </div>
          <form>

            <!-- Tenant Name -->
            <div class="form-group">
              <label for="EpropertyEditTenantName">Tenant Name</label>
              <input
                type="text"
                id="EpropertyEditTenantName"
                name="Eproperty[EditTenantName]"
                class="form-control form-control-lg input-45"
              >
            </div>

            <!-- Tenant Phone -->
            <div class="form-group">
              <label for="EpropertyEditTenantPhone">Tenant Phone</label>
              <input
                type="text"
                id="EpropertyEditTenantPhone"
                name="Eproperty[EditTenantPhone]"
                class="form-control form-control-lg input-45"
              >
            </div>

            <!-- Tenant Email -->
            <div class="form-group">
              <label for="EpropertyEditTenantEmail">Tenant Email</label>
              <input
                type="email"
                id="EpropertyEditTenantEmail"
                name="Eproperty[EditTenantEmail]"
                class="form-control form-control-lg input-45"
              >
            </div>

            <!-- Lease Start & End Date -->

            <div class="row">
              <!-- Start Date -->
              <div class="col">
                <div class="form-group">
                  <label for="EpropertyEditTenantLSD">Lease Start Date</label>
                  <input
                    type="date"
                    id="EpropertyEditTenantLSD"
                    name="Eproperty[EditTenantLSD]"
                    class="form-control form-control-lg input-45"
                  >
                </div>
              </div>
              <!-- End Date -->
              <div class="col">
                <div class="form-group">
                  <label for="EpropertyEditTenantLED">Lease End Date</label>
                  <input
                    type="date"
                    id="EpropertyEditTenantLED"
                    name="Eproperty[EditTenantLED]"
                    class="form-control form-control-lg input-45"
                  >
                </div>
              </div>
            </div>

            <!-- Save & Cancel Buttons -->
            <div class="d-flex justify-content-start">
              <button type="button" class="create-button">Save & Update</button>
              <button type="button" class="cancel-button ml-3" data-dismiss="modal">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>