<%= stylesheet_link_tag 'properties' %>
<% tenant = property&.tenants&.last %>

<div class="<%= 'display_none' unless property.currently_leased %>" id="EditTenantSection">

  <div class="mt-3">
    <span class="font-18 bold">Edit Tenant</span>
  </div>

    <div class="card mt-2" id="CardBorderMob">
      <div class="card-body" id="CardBodyMob">
        <div class="container p-3 col-12" id="TenantFormMob">

          <!-- Tenant Name -->
          <div class="form-group">
            <label for="EpropertyNewTenantName" class="bold">Tenant Name</label>
            <input
              type="text"
              id="EpropertyNewTenantName"
              placeholder="Enter Full Name"
              name="Eproperty[NewTenantName]"
              class="form-control form-control-lg input-45"
              value="<%= check_for(tenant.name) %>"
            >
          </div>

          <!-- Tenant Phone & Email -->
          <div class="row">
            <!-- Phone -->
            <div class="col">
              <div class="form-group">
                <label for="EpropertyNewTenantPhone" class="bold">Tenant Phone</label>
                <input
                  type="text"
                  id="EpropertyNewTenantPhone"
                  placeholder="Enter Full Name"
                  name="Eproperty[NewTenantPhone]"
                  value="<%= check_for(tenant.phone_number) %>"
                  class="form-control form-control-lg input-45"
                  onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                  oncopy="return false" oncut="return false" onpaste="return false"
                >
              </div>
            </div>
            <!-- Email -->
            <div class="col">
              <div class="form-group">
                <label for="EpropertyNewTenantEmail" class="bold">Tenant Email</label>
                <input
                  type="email"
                  id="EpropertyNewTenantEmail"
                  name="Eproperty[NewTenantEmail]"
                  placeholder="Enter Email Address"
                  value="<%= check_for(tenant.email) %>"
                  class="form-control form-control-lg input-45"
                >
              </div>
            </div>
          </div>

          <!-- Lease Start & End Date -->
          <div class="row">
            <!-- Start Date -->
            <div class="col">
              <div class="form-group">
                <label for="EpropertyNewLeaseStartDate" class="bold">Lease Start Date</label>
                <input
                  type="date"
                  placeholder="Enter Full Name"
                  id="EpropertyNewLeaseStartDate"
                  name="Eproperty[NewLeaseStartDate]"
                  class="form-control form-control-lg input-45"
                  value="<%= check_for(tenant.lease_start_date) %>"
                >
              </div>
            </div>
            <!-- Start Date -->
            <div class="col">
              <div class="form-group">
                <label for="EpropertyNewLeaseEndDate" class="bold">Lease End Date (if Known)</label>
                <input
                  type="date"
                  id="EpropertyNewLeaseEndDate"
                  name="Eproperty[NewLeaseEndDate]"
                  placeholder="Enter Email Address"
                  class="form-control form-control-lg input-45"
                  value="<%= check_for(tenant.lease_end_date) %>"
                >
              </div>
            </div>
          </div>

          <!-- ------------------------------ Edit Additional Tenant ------------------------------>

          <div class="my-3">
            <span class="font-16 bold">Edit Additional Tenant</span>
          </div>

          <!-- Tenant Name -->
          <div class="form-group">
            <label for="ADpropertyNewTenantName" class="bold">Tenant Name</label>
            <input
              type="text"
              id="ADpropertyNewTenantName"
              placeholder="Enter Full Name"
              name="ADproperty[NewTenantName][]"
              class="form-control form-control-lg input-45"
              value="<%= check_for(tenant.additional_tenant_name) %>"
            >
          </div>

          <!-- Tenant Phone & Email -->
          <div class="row">
            <!-- Phone -->
            <div class="col">
              <div class="form-group">
                <label for="ADpropertyNewTenantPhone" class="bold">Tenant Phone</label>
                <input
                  type="text"
                  id="ADpropertyNewTenantPhone"
                  placeholder="Enter Full Name"
                  name="ADproperty[NewTenantPhone][]"
                  class="form-control form-control-lg input-45"
                  value="<%= check_for(tenant.additional_tenant_phone) %>"
                  onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                  oncopy="return false" oncut="return false" onpaste="return false"
                >
              </div>
            </div>
            <!-- Email -->
            <div class="col">
              <div class="form-group">
                <label for="ADpropertyNewTenantEmail" class="bold">Tenant Email</label>
                <input
                  type="email"
                  id="ADpropertyNewTenantEmail"
                  name="ADproperty[NewTenantEmail]"
                  placeholder="Enter Email Address"
                  class="form-control form-control-lg input-45"
                  value="<%= check_for(tenant.additional_tenant_email) %>"
                >
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
</div>
