<%= stylesheet_link_tag 'properties' %>
<% tenant = property&.tenants&.last %>

<div class="mt-3">
  <span class="font-18 bold">Add Saved Tenant</span>
</div>
<div class="accordion" id="accordionExample">
  <div class="card mt-2" id="CardBorderMob">
    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
      <div class="card-body" id="CardBodyMob">
        <div class="container p-3 col-12" id="TenantFormMob">

          <!-- Tenant Name -->
          <div class="form-group">
            <label for="propertyNewTenantName">Tenant Name</label>
            <input
              disabled
              type="text"
              id="propertyNewTenantName"
              placeholder="Enter Full Name"
              name="property[NewTenantName]"
              class="form-control form-control-lg input-45"
              value="<%= check_for(tenant.name) %>"
            >
          </div>

          <!-- Tenant Phone & Email -->
          <div class="row">
            <!-- Phone -->
            <div class="col">
              <div class="form-group">
                <label for="propertyNewTenantPhone">Tenant Phone</label>
                <input
                  disabled
                  type="text"
                  id="propertyNewTenantPhone"
                  placeholder="Enter Full Name"
                  name="property[NewTenantPhone]"
                  value="<%= check_for(tenant.phone_number) %>"
                  class="form-control form-control-lg input-45"
                  onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                  oncopy="return false" oncut="return false" onpaste="return false"
                >
              </div>
            </div>
            <!-- Email -->
            <div class="col">
              <div class="form-group">
                <label for="propertyNewTenantEmail">Tenant Email</label>
                <input
                  disabled
                  type="email"
                  id="propertyNewTenantEmail"
                  name="property[NewTenantEmail]"
                  placeholder="Enter Email Address"
                  value="<%= check_for(tenant.email) %>"
                  class="form-control form-control-lg input-45"
                >
              </div>
            </div>
          </div>

          <!-- Lease Start & End Date -->
          <div class="row">
            <!-- Start Date -->
            <div class="col">
              <div class="form-group">
                <label for="propertyNewLeaseStartDate">Lease Start Date</label>
                <input
                  disabled
                  type="date"
                  placeholder="Enter Full Name"
                  id="propertyNewLeaseStartDate"
                  name="property[NewLeaseStartDate]"
                  class="form-control form-control-lg input-45"
                  value="<%= check_for(tenant.lease_start_date) %>"
                >
              </div>
            </div>
            <!-- Start Date -->
            <div class="col">
              <div class="form-group">
                <label for="propertyNewLeaseEndDate">Lease End Date</label>
                <input
                  disabled
                  type="date"
                  id="propertyNewLeaseEndDate"
                  name="property[NewLeaseEndDate]"
                  placeholder="Enter Email Address"
                  class="form-control form-control-lg input-45"
                  value="<%= check_for(tenant.lease_end_date) %>"
                >
              </div>
            </div>
          </div>

          <%= link_to 'Edit Tenant',
                      '#',
                      class: 'edit',
                      data: { 'toggle': 'modal', 'target': "#exampleModalCenter" }
          %>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content edit-tenant-modal">
      <div class="close">
        <%= image_tag 'properties/close_property_modal.svg',
                      aria: { 'label': 'Close' },
                      data: { 'dismiss': 'modal' },
                      class: 'close_modal_icon pull-right', width: '30'
        %>
      </div>
      <div class="modal-body">
        <div class="body">
          <div class="mb-3">
            <span class="heading bold">Edit Tenant</span>
          </div>
          <form>

            <!-- Tenant Name -->
            <div class="form-group">
              <label for="propertyEditTenantName">Tenant Name</label>
              <input
                type="text"
                id="propertyEditTenantName"
                name="property[EditTenantName]"
                class="form-control form-control-lg input-45"
              >
            </div>

            <!-- Tenant Phone -->
            <div class="form-group">
              <label for="propertyEditTenantPhone">Tenant Phone</label>
              <input
                type="text"
                id="propertyEditTenantPhone"
                name="property[EditTenantPhone]"
                class="form-control form-control-lg input-45"
              >
            </div>

            <!-- Tenant Email -->
            <div class="form-group">
              <label for="propertyEditTenantEmail">Tenant Email</label>
              <input
                type="email"
                id="propertyEditTenantEmail"
                name="property[EditTenantEmail]"
                class="form-control form-control-lg input-45"
              >
            </div>

            <!-- Lease Start & End Date -->

            <div class="row">
              <!-- Start Date -->
              <div class="col">
                <div class="form-group">
                  <label for="propertyEditTenantLSD">Lease Start Date</label>
                  <input
                    type="date"
                    id="propertyEditTenantLSD"
                    name="property[EditTenantLSD]"
                    class="form-control form-control-lg input-45"
                  >
                </div>
              </div>
              <!-- End Date -->
              <div class="col">
                <div class="form-group">
                  <label for="propertyEditTenantLED">Lease End Date</label>
                  <input
                    type="date"
                    id="propertyEditTenantLED"
                    name="property[EditTenantLED]"
                    class="form-control form-control-lg input-45"
                  >
                </div>
              </div>
            </div>

            <!-- Save & Cancel Buttons -->
            <div class="d-flex justify-content-start">
              <button type="button" class="create-button">Save & Update</button>
              <button type="button" class="cancel-button ml-3" data-dismiss="modal">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>