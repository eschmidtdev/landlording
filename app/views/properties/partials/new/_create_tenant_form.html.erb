<%= stylesheet_link_tag 'properties' %>

<div class="my-4">
  <span class="radio-label bold" class="bold">Currently Leased?</span>
  <label class="radio-inline" for="CLY">
    <input type="radio" class="ml-2 currently-leased" id="CLY" name="property[CurrentlyLeased]" value="true"><span class="ml-1">Yes</span>
  </label>
  <label class="radio-inline" for="CLN">
    <input type="radio" class="ml-2 currently-leased" id="CLN" name="property[CurrentlyLeased]" value="false" checked><span class="ml-1">No</span>
  </label><br>
</div>

<div id="TenantSection" class="display_none">

  <div class="mt-3">
    <span class="font-18 bold">Add New Tenant</span>
  </div>

  <div class="accordion">
    <div class="card mt-2" id="CardBorderMob">
      <div class="card-body" id="CardBodyMob">
        <div class="container p-3 col-12" id="TenantFormMob">

          <div class="form-group">
            <label for="propertyNewTenantName" class="bold">Tenant Name</label>
            <input
              type="text"
              id="propertyNewTenantName"
              placeholder="Tenant Name"
              name="property[NewTenantName][]"
              class="form-control form-control-lg input-45"
            >
          </div>

          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="propertyNewTenantPhone" class="bold">Tenant Phone</label>
                <input
                  type="text"
                  id="propertyNewTenantPhone"
                  placeholder="Tenant Phone"
                  name="property[NewTenantPhone][]"
                  class="form-control form-control-lg input-45"
                  onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                  oncopy="return false" oncut="return false" onpaste="return false"
                >
              </div>
            </div>
            <div class="col">
              <div class="form-group">
                <label for="propertyNewTenantEmail" class="bold">Tenant Email</label>
                <input
                  type="email"
                  id="propertyNewTenantEmail"
                  name="property[NewTenantEmail][]"
                  placeholder="Tenant Email Address"
                  class="form-control form-control-lg input-45"
                >
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="propertyNewLeaseStartDate" class="bold">Lease Start Date</label>
                <input
                  type="date"
                  placeholder="Enter Full Name"
                  id="propertyNewLeaseStartDate"
                  name="property[NewLeaseStartDate][]"
                  class="form-control form-control-lg input-45"
                >
              </div>
            </div>
            <div class="col">
              <div class="form-group">
                <label for="propertyNewLeaseEndDate" class="bold">Lease End Date (if Known)</label>
                <input
                  type="date"
                  id="propertyNewLeaseEndDate"
                  name="property[NewLeaseEndDate]"
                  placeholder="Enter Email Address"
                  class="form-control form-control-lg input-45"
                >
              </div>
            </div>
          </div>

          <div class="mt-2">
            <a role="button" class="bold" id="SwitchAdditionalTenant">Add Additional Tenant</a>
          </div>

          <div class="display_none" id="AdditionalTenantSection">
            <div class="my-3">
              <span class="font-16 bold">Add Additional Tenant</span>
            </div>

            <div class="form-group">
              <label for="ADpropertyNewTenantName" class="bold">Tenant Name</label>
              <input
                type="text"
                id="ADpropertyNewTenantName"
                placeholder="Tenant Name"
                name="ADproperty[NewTenantName][]"
                class="form-control form-control-lg input-45"
              >
            </div>

            <div class="row">
              <div class="col">
                <div class="form-group">
                  <label for="ADpropertyNewTenantPhone" class="bold">Tenant Phone</label>
                  <input
                    type="text"
                    id="ADpropertyNewTenantPhone"
                    placeholder="Tenant Phone"
                    name="ADproperty[NewTenantPhone][]"
                    class="form-control form-control-lg input-45"
                    onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                    oncopy="return false" oncut="return false" onpaste="return false"
                  >
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <label for="ADpropertyNewTenantEmail" class="bold">Tenant Email</label>
                  <input
                    type="email"
                    id="ADpropertyNewTenantEmail"
                    name="ADproperty[NewTenantEmail]"
                    placeholder="Tenant Email Address"
                    class="form-control form-control-lg input-45"
                  >
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>