<form name="property_form" class="new-property-form">
  <input type="hidden" value="<%= current_user.id %>" id="PropertyUserID">

  <!-- Property Type Dropdown -->
  <div class="form-group">
    <label for="propertyPropertyType" class="bold">Property Type*</label>
    <select name="property[property_type]" id="propertyPropertyType" class="form-control form-control-lg input-45">
      <option disabled selected>Select Property</option>
      <% Property.property_types.keys.each do |property_type| %>
        <option><%= property_type %></option>
      <% end %>
    </select>
  </div>

  <!-- Street Address Line 1 -->
  <div class="form-group">
    <label for="propertySAL1" class="bold">Street Address Line 1*</label>
    <input
      type="text"
      id="propertySAL1"
      name="property[SAL1]"
      placeholder="You Address"
      class="form-control form-control-lg input-45"
    >
  </div>

  <!-- Street Address Line 2 -->
  <div class="form-group">
    <label for="propertySAL2" class="bold">Street Address Line 2</label>
    <input
      type="text"
      id="propertySAL2"
      name="property[SAL2]"
      placeholder="You Address"
      class="form-control form-control-lg input-45"
    >
  </div>

  <!-- Postal, City, State -->
  <div class="row">
    <!-- Postal -->
    <div class="col">
      <div class="form-group">
        <label for="propertyPostalCode" class="bold">Postal Code*</label>
        <input
          type="text"
          placeholder="Zip Code"
          id="propertyPostalCode"
          name="property[PostalCode]"
          data-from="create_property"
          class="form-control form-control-lg input-45 zipcode_interactive"
        >
        <span id="createZipErr" class="error"></span>
      </div>

    </div>
    <!-- City -->
    <div class="col">
      <div class="form-group">
        <label for="propertyCity" class="bold">City*</label>
        <input
          disabled
          type="text"
          id="propertyCity"
          placeholder="City"
          name="property[City]"
          class="form-control form-control-lg input-45"
        >
      </div>
    </div>
    <!-- State -->
    <div class="col">
      <div class="form-group">
        <label for="propertyState" class="bold">State*</label>
        <input
          disabled
          type="text"
          id="propertyState"
          placeholder="State"
          name="property[State]"
          class="form-control form-control-lg input-45"
        >
      </div>
    </div>
  </div>

  <!-- Bed & Bath -->
  <div class="row">
    <!-- Bedroom -->
    <div class="col margin-top-mob">
      <label for="propertyBedroomA" class="bold">Bedroom</label>
      <select name="property[BedroomA]" id="propertyBedroomA" class="form-control form-control-lg input-45">
        <option value="" disabled selected>Select Bedroom</option>
        <% bedrooms_a.to_a.each do |room| %>
          <option value="<%= room %>"><%= room %></option>
        <% end %>
      </select>
    </div>
    <!-- Bathroom -->
    <div class="col margin-top-mob">
      <label for="propertyBedroomB" class="bold">Bathroom</label>
      <select name="property[BedroomB]" id="propertyBedroomB" class="form-control form-control-lg input-45">
        <option value="" disabled selected>Select Bathroom</option>
        <% bathrooms.to_a.each do |room| %>
          <option value="<%= room %>"><%= room %></option>
        <% end %>
      </select>
    </div>
  </div>

  <!--------------------------------  Landlord Section -------------------------------->

  <!-- Landlord Toggle -->
  <div class="form-check form-check-inline desktop-margin my-4">
    <input type="checkbox" class="form-check-input" id="propertyLandlordInfo">
    <label class="form-check-label mt-mob-22 bold mt5" for="propertyLandlordInfo">Same landlord contact info as found in
      your Account Settings?</label>
  </div>

  <!-- Landlord Form -->
  <%= render partial: 'properties/partials/landlord_form' %>

  <!-------------------------------- Add Tenant Section -------------------------------->

  <!-- Tenant Toggle -->
  <div class="my-4">
    <span class="radio-label bold" class="bold">Currently Leased?</span>
    <label class="radio-inline" for="CLY">
      <input type="radio" class="ml-2 currently-leased" id="CLY" name="property[CurrentlyLeased]" value="true"><span class="ml-1">Yes</span>
    </label>
    <label class="radio-inline" for="CLN">
      <input type="radio" class="ml-2 currently-leased" id="CLN" name="property[CurrentlyLeased]" value="false" checked><span class="ml-1">No</span>
    </label><br>
  </div>

  <!-- Add New Tenant Form -->
  <%= render partial: 'properties/partials/create_tenant_form' %>

  <!-------------------------------- Add Tenant Notice Section -------------------------------->

  <!--  Tenant Notice Toggle -->
  <div class="mt-4">
    <span class="radio-label bold">Will the property address also be used for notices sent to the tenant?</span><br>
    <label class="radio-inline" for="APAY">
      <input type="radio" class="asked-for-property" id="APAY" name="property[AskPropertyAddress]" value="true"><span class="ml-1">Yes</span>
    </label>
    <label class="radio-inline" for="APAN">
      <input type="radio" class="asked-for-property" id="APAN" name="property[AskPropertyAddress]" value="false"><span class="ml-1">No</span>
    </label><br>
  </div>

  <!--  Tenant Notice Form -->
  <%= render partial: 'properties/partials/tenant_notice_form' %>

  <hr>

  <div class="d-flex justify-content-start mb-5">
    <button
      type="submit"
      class="create-button"
      id="SavePropertyBtn"
    >
      Save & Update
    </button>
    <button
      type="button"
      class="cancel-button ml-3"
      onclick="window.location.href='<%= properties_path %>'"
    >
      Cancel
    </button>
  </div>

</form>

<%= javascript_include_tag 'properties' %>
