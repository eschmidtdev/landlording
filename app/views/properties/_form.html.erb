<!-- Personal Information Form -->
<form name="property_form" class="new-property-form">

  <!-- Property Type Dropdown -->
  <div class="form-group">
    <label for="propertyPropertyType">Property Type*</label>
    <select name="" id="propertyPropertyType" class="form-control form-control-lg input-45">
      <option value="" disabled selected>Select Property</option>
      <option value="">Property Type 1</option>
      <option value="">Property Type 2</option>
      <option value="">Property Type 3</option>
      <option value="">Property Type 4</option>
    </select>
  </div>

  <!-- Street Address Line 1 -->
  <div class="form-group">
    <label for="propertySAL1">Street Address Line 1*</label>
    <input
      type="text"
      id="propertySAL1"
      name="property[SAL1]"
      placeholder="You Address"
      class="form-control form-control-lg input-45"
    >
  </div>

  <!-- Street Address Line 2 -->
  <div class="form-group">
    <label for="propertySAL2">Street Address Line 2</label>
    <input
      type="text"
      id="propertySAL2"
      name="property[SAL2]"
      placeholder="You Address"
      class="form-control form-control-lg input-45"
    >
  </div>

  <!-- Postal, City, State -->
  <div class="row">
    <div class="col-md-12">
      <!-- Postal Code -->
      <div class="col-md-3 pl-0">
        <div class="form-group">
          <label for="propertyPostalCode">Postal Code*</label>
          <input
            type="text"
            placeholder="Zip Code"
            id="propertyPostalCode"
            name="property[PostalCode]"
            class="form-control form-control-lg input-45"
          >
        </div>
      </div>
      <!-- City -->
      <div class="col-md-5 pl-0 pr-0">
        <div class="form-group">
          <label for="propertyCity">City*</label>
          <input
            type="text"
            id="propertyCity"
            placeholder="City"
            name="property[City]"
            class="form-control form-control-lg input-45"
          >
        </div>
      </div>
      <!-- State -->
      <div class="col-md-4 pr-0">
        <label for="propertyState">State*</label>
        <select name="property[State]" id="propertyState" class="form-control form-control-lg input-45">
          <option value="" disabled selected>State</option>
          <option value="">State 1</option>
          <option value="">State 2</option>
          <option value="">State 3</option>
          <option value="">State 4</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Bedrooms -->
  <div class="row">
    <div class="col-md-12">
      <!-- Bedrooms -->
      <div class="col-md-6 pl-0">
        <label for="propertyBedroomA">Bedroom</label>
        <select name="property[BedroomA]" id="propertyBedroomA" class="form-control form-control-lg input-45">
          <option value="" disabled selected>0</option>
          <option value="">1</option>
          <option value="">2</option>
          <option value="">3</option>
          <option value="">4</option>
        </select>
      </div>
      <!-- Bedrooms -->
      <div class="col-md-6 pr-0">
        <label for="propertyBedroomB">Bedroom</label>
        <select name="property[BedroomB]" id="propertyBedroomB" class="form-control form-control-lg input-45">
          <option value="" disabled selected>0</option>
          <option value="">1</option>
          <option value="">2</option>
          <option value="">3</option>
          <option value="">4</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Checkbox -->
  <div class="my-5">
    <div class="form-check pl-0">
      <input class="form-check-input" type="checkbox" value="property[LandlordInfo]" id="propertyLandlordInfo" checked>
      <label class="form-check-label property-checkbox" for="propertyLandlordInfo">
        Same landlord contact info as found in your Account Settings?
      </label>
    </div>
  </div>

  <!-- Landlord Contact Name -->
  <div class="form-group">
    <label for="propertyLandlordContactName">Landlord Contact Name*</label>
    <input
      type="text"
      placeholder="Landlord Full Name"
      id="propertyLandlordContactName"
      name="property[LandlordContactName]"
      class="form-control form-control-lg input-45"
    >
  </div>

  <!-- Landlord Contact Phone -->
  <div class="form-group">
    <label for="propertyLandlordContactPhone">Landlord Contact Phone*</label>
    <input
      type="text"
      placeholder="Phone Number"
      id="propertyLandlordContactPhone"
      name="property[LandlordContactPhone]"
      class="form-control form-control-lg input-45"
    >
  </div>

  <!-- Landlord Contact Email -->
  <div class="form-group">
    <label for="propertyLandlordContactEmail">Landlord Contact Email*</label>
    <input
      type="email"
      placeholder="Enter Email Address"
      id="propertyLandlordContactEmail"
      name="property[LandlordContactEmail]"
      class="form-control form-control-lg input-45"
    >
  </div>

  <!-- Radio Buttons -->
  <span class="radio-label">Currently Leased?</span>
  <label class="radio-inline">
    <input type="radio" name="property[LeasedYes]" checked>Yes
  </label>
  <label class="radio-inline">
    <input type="radio" name="property[LeasedNo]">No
  </label><br>

  <!-- Add New Tenant -->
  <%= render partial: 'properties/tenant_form' %>

  <div class="mt-4">
    <span class="radio-label font-bold">Will the property address also be used for notices sent to the tenant?</span><br>
    <label class="radio-inline">
      <input type="radio" name="property[AskPropertyAddressYes]" checked>Yes
    </label>
    <label class="radio-inline">
      <input type="radio" name="property[AskPropertyAddressNo]">No
    </label><br>
  </div>

  <hr>

  <div class="d-flex justify-content-start mb-5">
    <button type="button" class="create-button">Save</button>
    <button type="button" class="cancel-button ml-3">Cancel</button>
  </div>


</form>