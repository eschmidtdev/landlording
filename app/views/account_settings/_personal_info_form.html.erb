<div class="personal_info_rectangle">
  <!-- Personal Information -->
  <span class="section_heading">Personal Information</span>

  <!-- Personal Information Form -->
  <form name="personal_info" class="mt-4">

    <!-- First Name -->
    <div class="form-group">
      <label for="FirstName" class="normal_font"><span class="setting_label">First Name</span></label>
      <input
        type="text"
        id="FirstName"
        name="user[name]"
        autofocus="autofocus"
        value="<%= user_name.first %>"
        class="form-control form-control-lg input-45"
      >
    </div>

    <!-- Last Name -->
    <div class="form-group">
      <label for="LastName" class="normal_font"><span class="setting_label">Last Name</span></label>
      <input
        type="text"
        id="LastName"
        name="user[name]"
        autofocus="autofocus"
        value="<%= user_name.last %>"
        class="form-control form-control-lg input-45"
      >
    </div>

    <!-- Email -->
    <div class="form-group">
      <label for="Email" class="normal_font"><span class="setting_label">Email</span></label>
      <input
        readonly
        id="Email"
        type="email"
        value="<%= current_user.email %>"
        class="form-control form-control-lg input-45"
      >
      <span class="email_instructions">Email address cannot be changed</span>
    </div>

    <!-- Password -->
    <div class="form-group">
      <label for="Password" class="normal_font"><span class="setting_label">Password</span></label>
      <input
        type="password"
        id="Password"
        name="user[name]"
        autofocus="autofocus"
        class="form-control form-control-lg input-45"
      >
      <span class="email_instructions">Want to change the password?</span>
      <a href="<%= change_password_account_setting_path(1) %>" class="text-body-as ml-1">Click here</a>
    </div>

    <div class="d-flex justify-content-start">
      <button type="button" class="save_personal_info">Save</button>
      <button type="button" class="cancel-button ml-3">Cancel</button>
    </div>

  </form>

</div>