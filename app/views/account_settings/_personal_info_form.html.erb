<div class="personal-info-rectangle">

  <!-- Personal Information -->
  <span class="heading font-bold">Personal Information</span>

  <!-- Personal Information Form -->
  <form name="personal_info" class="mt-4">

    <!-- First Name -->
    <div class="form-group">
      <label for="accountSettingFirstName">First Name</label>
      <input
        type="text"
        id="accountSettingFirstName"
        value="<%= user_name.first %>"
        name="account[SettingFirstName]"
        class="form-control form-control-lg input-45"
      >
    </div>

    <!-- Last Name -->
    <div class="form-group">
      <label for="accountSettingLastName">Last Name</label>
      <input
        type="text"
        id="accountSettingLastName"
        value="<%= user_name.last %>"
        name="accountSetting[LastName]"
        class="form-control form-control-lg input-45"
      >
    </div>

    <!-- Email -->
    <div class="form-group">
      <label for="accountSettingEmail">Email</label>
      <input
        readonly
        type="email"
        id="accountSettingEmail"
        value="<%= current_user.email %>"
        class="form-control form-control-lg input-45"
      >
      <span class="instruction opacity-0-5">Email address cannot be changed</span>
    </div>

    <!-- Password -->
    <div class="form-group">
      <label for="accountSettingPassword">Password</label>
      <input
        type="password"
        id="accountSettingPassword"
        name="accountSetting[Password]"
        class="form-control form-control-lg input-45"
      >
      <span class="instruction opacity-0-5">Want to change the password?</span>
      <%= link_to 'Click here',
                  change_password_account_setting_path(1),
                  class: 'password-link font-bold ml-1'
      %>
    </div>

    <div class="d-flex justify-content-start">
      <button type="button" class="create-button">Save</button>
      <button type="button" class="cancel-button ml-3">Cancel</button>
    </div>

  </form>

</div>