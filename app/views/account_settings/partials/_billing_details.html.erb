<div class="billing-rectangle mb-5">

  <!-- Billing Details Heading -->
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6">
        <span class="heading font-bold pull-left">Billing Details</span>
      </div>
    </div>
  </div>

  <!-- Billing Details Cards -->
  <div class="mt-5">
    <div class="row">
      <div class="col-md-12">

        <div class="col-md-6 card-rectangle">
          <div class="row">
            <div class="col-md-12">
              <div class="col-md-6">
                <div class="brand-container">
                  <%= image_tag 'account_settings/master_card_logo.svg', class: ' pull-left mt-1', width: '30' %>
                  <br>
                </div>
                <span class="number">************4099</span>
                <span class="expiry opacity-0-75">Expires 05/2024</span><br>
                <span class="expiry opacity-0-75">123 Apple Street, Unit 101, Austin, TX 78741</span><br>
                <div class="mt-4">
                  <span class="last-used font-bold">LAST USED 11/04/2021</span>
                </div>
              </div>

              <div class="col-md-6">
                <div class="pull-right">
                  <div class="dropdown">
                    <a type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <%= image_tag 'global_images/more.svg', width: '20' %>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item" href="#">
                        <div class="d-flex justify-content-start">
                          <%= image_tag 'account_settings/edit_svg.svg', class: 'm-0', width: '15' %>
                          <span class="ml-2">Edit</span>
                        </div>
                      </a>
                      <a class="dropdown-item" href="#">
                        <div class="d-flex justify-content-start">
                          <%= image_tag 'account_settings/delete_icon.svg', class: 'm-0', width: '15' %>
                          <span class="ml-2">Delete</span>
                        </div>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>

        <div class="col-md-6 card-rectangle pull-right">
          <div class="parent">
            <span class="child">
              <b><%= link_to 'Add Payment Method', payments_path, class: 'add-payment-btn font-bold' %></b>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>