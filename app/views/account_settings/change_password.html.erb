<div class="container">

  <!-- Heading -->
  <%= render partial: 'layouts/page_heading' %>

  <form name="change_password" id="ChangePassword">

    <div class="d-flex align-items-center my-4"></div>

    <!-- Current Password -->
    <div class="form-group">
      <label for="SettingECP" class="normal_font">Enter Current Password*</label>
      <input
        type="password"
        id="SettingECP"
        name="user[name]"
        autofocus="autofocus"
        placeholder="Your Password"
        class="form-control form-control-lg"
      >
    </div>

    <!-- New Password -->
    <div class="form-outline mt-4">
      <label class="form-label normal_font" for="SettingCP">Current Password*</label>
      <input
        id="SettingCP"
        type="password"
        name="user[email]"
        autofocus="autofocus"
        placeholder="Your Your Password"
        class="form-control form-control-lg"
      >
    </div>
    <span class="error display_none" id="UserExists"></span>

    <!-- Confirm Password -->
    <div class="form-outline mt-4">
      <label class="form-label normal_font" for="SettingCNP">Confirm New Password*</label>
      <input
        id="SettingCNP"
        type="password"
        name="user[email]"
        autofocus="autofocus"
        placeholder="Confirm Your Password"
        class="form-control form-control-lg"
      >
    </div>
    <span class="error display_none" id="PasswordError"></span>


    <!-- Save & Cancel Buttons -->
    <div class="d-flex justify-content-start my-5">
      <button type="button" class="save_tenant_info">Save & Update</button>
      <button
        type="button" class="cancel_personal_info ml-3"
        onclick="window.location.href='<%= account_settings_path %>'">
        Cancel
      </button>
    </div>
  </form>

</div>
